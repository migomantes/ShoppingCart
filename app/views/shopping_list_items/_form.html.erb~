<%= simple_form_for(@shopping_list_item) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :shopping_list_id %>
    <%= f.input :item_id %>
    <%= f.input :price %>
    <%= f.input :qty %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
